{% extends 'base.html.twig' %}

{% block title %}Mes adresses
{% endblock %}

{% block content %}
<div class="container my-5">
	<div class="d-flex align-items-center mb-3">
		<div class="me-2">
			<a class="btn btn-success btn-sm rounded-circle" href="{{path('account')}}">
				<i class="bi bi-arrow-left-circle"></i>
			</a>
		</div>
		<div>
			<h1 class="m-0">Mes adresses</h1>
		</div>
	</div>
	<p>
		Bienvenue {{app.user.firstname}} dans votre carnet d'adresses !
	</p>
	<a href="{{path('account_address_add')}}" class="btn btn-success btn-sm float-right">
	<i class="fa-solid fa-plus"></i>
	Ajouter une adresse
	</a>
	</br>
	{% if app.user.addresses | length == 0 %}
		<p>Pas d'adresse, <a href=" ">cliquez ici </a></p>
	{% else %}
	<div class="row mt-3">
		{% for address in  app.user.addresses %}
			<div class="col-sm-3 mb-3 mb-sm-0">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{address.name}}</h5>
						<p class="card-text">{{address.address}}, </br> {{address.postal}}-{{address.city}}-{{address.country}}</p>
						<div class="d-flex">
							<a class="btn btn-success me-2 btn-sm rounded-circle" href="{{path('account_address_edit', {'id':address.id}) }}">
								<i class="bi bi-pencil-square"></i>
							</a> 
							<a class="btn btn-danger btn-sm rounded-circle" href="{{path('account_address_delete', {'id':address.id})}}">
								<i class="bi bi-trash3"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endif %}
</div>
{% endblock %}

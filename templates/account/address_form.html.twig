{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse
{% endblock %}

{% block content %}
<div class="container my-5">
	<div class="d-flex align-items-center mb-3">
		<div class="me-2">
			<a class="btn btn-success btn-sm rounded-circle" href="{{path('account_address')}}">
				<i class="bi bi-arrow-left-circle"></i>
			</a>
		</div>
		<div>
			<h1 class="m-0">GÃ©rer mes adresses :</h1>
		</div>
	</div>
	{{form_start(form)}}
	<div class="row">
		<div class="col-12">
			{{form_row(form.name)}}
		</div>
		<div class="col-6">
			{{form_row(form.lastname)}}
		</div>
		<div class="col-6">
			{{form_row(form.firstname)}}
		</div>
		<div class="col-6">
			{{form_row(form.company)}}
		</div>
		<div class="col-6">
			{{form_row(form.address)}}
		</div>
		<div class="col-6">
			{{form_row(form.postal)}}
		</div>
		<div class="col-6">
			{{form_row(form.city)}}
		</div>
		<div class="col-6">
			{{form_row(form.country)}}
		</div>
		<div class="col-6">
			{{form_row(form.phone)}}
		</div>
	</div>
	{{form_end(form)}}
</div>


{% endblock %}
